<rules>
	<!--rule for 'widget' param - example-->
    <rule>
		<!--param alias-->
        <alias>widget</alias>
		<!--param type-->
        <type>boolean</type>
		<!--value forming rules-->
        <values>
			<value>
				<!--result value-->
				<target>false</target>
				<!--foreign values, resulting in value above-->
				<sources>
					<source>no</source>
					<source>0</source>
					<source>нет</source>
					<source></source>
				</sources>
			</value>
			<value>
				<target>true</target>
				<sources>
					<source>yes</source>
					<source>1</source>
					<source>да</source>
				</sources>
			</value>
		</values>
		<rawAllowed>false</rawAllowed>
    </rule>
